{
  "name": "twitch-marathon-timer",
  "version": "1.0.0",
  "description": "A Twitch Timer that reacts to certain eventsub events to add time to a timer based on configured settings.",
  "main": "index.js",
  "scripts": {
    "test": "electron .",
    "pack": "electron-builder --dir",
    "dist": "node build.js",
    "build": "electron-builder --win --publish never",
    "build:mac": "electron-builder --mac --publish never --universal -c.mac.identity=null"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DarkWolfie-YouTube/twitch-marathon-timer.git"
  },
  "keywords": [
    "twitch",
    "twitch marathon",
    "twitch timer",
    "twitch eventsub",
    "twitch api",
    "subathon"
  ],
  "author": "DarkWolfieVT",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DarkWolfie-YouTube/twitch-marathon-timer/issues"
  },
  "homepage": "https://github.com/DarkWolfie-YouTube/twitch-marathon-timer#readme",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "dotenv": "^16.4.7",
    "font-list": "^1.5.1",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.darkwolfievt.twitchmarathontimer",
    "productName": "Twitch Marathon Timer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!.angular/",
      "!*.map",
      "!*.md"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Twitch Marathon Timer"
    },
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    }
  }
}

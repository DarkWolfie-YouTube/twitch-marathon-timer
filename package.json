{
  "name": "twitch-marathon-timer",
  "version": "0.0.2",
  "description": "A Twitch Timer that reacts to certain eventsub events to add time to a timer based on configured settings.",
  "main": "index.js",
  "scripts": {
    "test": "electron .",
    "pack": "electron-builder --dir",
    "dist": "node build.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DarkWolfie-YouTube/twitch-marathon-timer.git"
  },
  "keywords": [
    "twitch",
    "twitch marathon",
    "twitch timer",
    "twitch eventsub",
    "twitch api",
    "subathon"
  ],
  "author": "DarkWolfieVT",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DarkWolfie-YouTube/twitch-marathon-timer/issues"
  },
  "homepage": "https://github.com/DarkWolfie-YouTube/twitch-marathon-timer#readme",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "dotenv": "^16.4.7",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.darkwolfie.twitchmarathontimer",
    "productName": "Twitch Marathon Timer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "certificateFile": "./build/cert.pfx",
      "certificatePassword": "${env.CERT_PASSWORD}",
      "publisherName": "DarkWolfieVT",
      "signingHashAlgorithms": [
        "sha256"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
